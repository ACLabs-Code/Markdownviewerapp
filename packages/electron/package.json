{
  "name": "mdviewer-electron",
  "version": "0.1.0",
  "private": true,
  "main": "./dist/main.cjs",
  "scripts": {
    "build": "node esbuild.mjs",
    "build:watch": "concurrently \"pnpm exec tailwindcss -i src/renderer/styles.css -o dist/renderer.css --watch\" \"node esbuild.mjs --watch\"",
    "typecheck": "tsc --noEmit -p tsconfig.json && tsc --noEmit -p tsconfig.renderer.json",
    "start": "electron .",
    "dev": "node esbuild.mjs && electron .",
    "package": "node esbuild.mjs --production && electron-builder"
  },
  "dependencies": {
    "@mdviewer/core": "workspace:*",
    "lucide-react": "0.575.0",
    "next-themes": "0.4.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sonner": "2.0.7"
  },
  "devDependencies": {
    "@tailwindcss/cli": "4.2.1",
    "@types/node": "^24.0.0",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "chokidar": "^5.0.0",
    "concurrently": "^9.0.0",
    "electron": "^40.0.0",
    "electron-builder": "^26.0.0",
    "esbuild": "^0.27.0",
    "typescript": "^5.9.3"
  }
}
