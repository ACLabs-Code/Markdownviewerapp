{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch MD Viewer Extension",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/packages/vscode-extension"
      ],
      "outFiles": [
        "${workspaceFolder}/packages/vscode-extension/dist/**/*.js"
      ],
      "preLaunchTask": "build-extension",
      "sourceMaps": true,
      "smartStep": true
    },
    {
      "name": "Launch MD Viewer Extension (Watch Mode)",
      "type": "extensionHost",
      "request": "launch",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/packages/vscode-extension"
      ],
      "outFiles": [
        "${workspaceFolder}/packages/vscode-extension/dist/**/*.js"
      ],
      "sourceMaps": true,
      "smartStep": true
    }
  ]
}
